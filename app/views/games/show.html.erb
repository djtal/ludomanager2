<div class="page-header">
  <h2><%= @game.name %>
  <small><%= (@game.editions.pluck(:name).uniq - [@game.name]) * ', ' %></small></h2>
</div>

<%= notice %>

<div class="span4">
  <%= image_tag @game.editions.primary.first.box_front.image.normal.url, :class => "box" %>
</div>
<div class="span8">
  <ul class="unstyled horizontal" id="technical">
    <li><i class="icon-time"></i><%= @game.time.text %></li>
    <li><i class="icon-user"></i><%= @game.min %>/ <%= @game.max %></li>
    <li><i class="icon-fire"></i><%= @game.level.text %></li>
  </ul>
  <h3>Crée par</h3>
  <ul class="horizontal unstyled">
    <% @game.authors.each do |a| -%>
      <li><%= a.fullname %></li>
    <% end -%>
  </ul>
  <h3>Edité par :</h3>
  <ul class="thumbnails">
     <% @game.editions.each do |edition|  -%>
        <li class="<%= "box " if @game.active_edition == edition %>span1 thumbnail"><%= image_tag  edition.editor.logo.image.thumb.url %></li>
     <% end -%>
  </ul>
  <div class="btn-toolbar">
    <div class="btn-group">
    <%= link_to "#", :class => "btn btn-large btn-success" do %>
      <i class="icon-bookmark"></i> Ajouter a mes jeux...
    <% end -%>
    </div>
    <%= dropdown_button_for("Modifier", :class => "btn-large btn-info", :icon => "icon-edit") do %>
      <li><%= link_to "Editer la fiche", kind_edit_game_path(@game, :general) %></li>
      <li><%= link_to "Ajouter une edition", kind_edit_game_path(@game, :new_edition) %></li>
      <li><%= link_to "Gerer les editions", kind_edit_game_path(@game, :editions) %></li>
    <% end -%>
  </div>
</div>

<% unless @game.base_game_id.present? -%>
  <h3>Les extensions</h3>
  <ul class="thumbnails">
     <% @game.extensions.each do |ext|  -%>
        <li class="span2 game thumbnail">
          <h4><%= link_to ext.name, game_path(ext) %></h4>
          <%= image_tag ext.active_edition.box_front.image.boxed.url  %>
        </li>
     <% end -%>
  </ul>
<% end -%>
