<%= simple_form_for(@game, :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <fieldset class="well">
    <legend>Le jeu</legend>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.association :base_game, collection: @base_games.to_a %>
      <div class="row">
        <div class="span4">
          <%= f.input :min %>
        </div>
        <div class="span4">
          <%= f.input :max %>
        </div>
      </div>
      <%= f.input :time, :collection => Game.time.options, :class => "span3" %>
      <%= f.input :target, :collection => Game.target.options, :class => "span3" %>
      <%= f.input :level, :collection => Game.level.options, :class => "span1" %>
    </div>
  </fieldset>

  <fieldset class="well">
    <legend>Auteurs/Illustrateurs</legend>
    <div class="form-inputs">
        <% @works.each do |work| -%>
          <%= f.fields_for :works, work do |fw| %>
            <%= render "works/form", form: fw %>
          <% end -%>
        <% end -%>
    </div>
  </fieldset>

  <% if @edition -%>
    <div class="form-inputs">
        <%= f.fields_for :editions, @edition do |fe| -%>
          <%= render "editions/form", :form => fe, :edition => @edition %>
        <% end -%>
    </div>
  <% end -%>
  <div class="form-actions">
    <%= f.button :submit, :value => "Creer", :class => "btn-primary" %>
    <%= link_to "Annuler", games_path, :class => "btn" %>
  </div>
<% end %>
