<%= simple_form_for(@game) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :min %>
  <%= f.input :max %>
  <%= f.input :time, :collection => Game.time.options %>
  <%= f.input :target, :collection => Game.target.options %>
  <%= f.input :level, :collection => Game.level.options %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
