<!DOCTYPE html>
<html>
<head>
  <title>Ludomanager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>  
  <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <%= link_to admin_root_path, :class => "brand" do %>
              Ludomanager<span class="red">::Admin</span> 
            <% end -%>
            <div class="nav-collapse">
              <ul class="nav">
                <li><%= link_to "Les Jeux", admin_games_path %></li>
                <li><%= link_to 'Les Pays', admin_countries_path %></li>
              </ul>
              <p class="navbar-text pull-right">
                  <%= link_to "Retour ludomanage", root_path %>
              </p>
            </div><!--/.nav-collapse -->
          </div>
        </div>
      </div>

      <div class="container-fluid">
        <div class="row-fluid">
          <div class="span3">
            <div class="well sidebar-nav">
              <%= render "admin/shared/shared_menu" %>
            </div><!--/.well -->
          </div><!--/span-->
          <div class="span9">
            <%= yield %>
          </div>
          
        </div><!--/row-->

        <hr>

        <footer>
          <p>&copy; Company 2012</p>
        </footer>

      </div><!--/.fluid-container-->
  </div>
</body>
</html>

