<!DOCTYPE html>
<html>
<head>
  <title>Ludomanager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>  
  <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <%= link_to "Administration", admin_root_path, :class => "brand" %>
            <div class="nav-collapse">
              <ul class="nav">
                <li class="active"><%= link_to "Les Jeux", "" %></li>
                <li><%= link_to 'Editors', editors_path %></li>
                <li><%= link_to 'Les Pays', admin_countries_path %></li>
              </ul>
              <p class="navbar-text pull-right">
                  <%= link_to "Retour ludomanage", root_path %>
              </p>
            </div><!--/.nav-collapse -->
          </div>
        </div>
      </div>

      <div class="container-fluid">
