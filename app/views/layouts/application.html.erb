<!DOCTYPE html>
<html>
<head>
  <title><%= @title.present? ?  @title : "Ludomaganager" %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "iconmoo", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <%= link_to "Ludomanager", root_path, :class => "navbar-brand" %>
      <ul class="nav navbar-nav">
        <%= menu_item("Les Jeux", games_path, :games) %>
        <li class="divider-vertical"></li>
        <% Game.target.options.each do |name, target| -%>
          <%= menu_item(name, target_games_path(:target => target), "games_#{target}", :dropdown => true, split: true) do %>
            <ul class="dropdown-menu">
              <li><%= link_to "Tous", target_games_path(:target => target) %></li>
              <li class="divider"></li>
              <% Game.time.options.each do |name, time| %>
                <li><%= link_to name, target_time_games_path(:target => target, :time => time) %></li>
              <% end -%>
            </ul>
          <% end -%>
          <li class="divider-vertical"></li>
        <% end -%>
        <%= menu_item("Les Auteurs",people_path, :games) %>
        <li class="divider-vertical"></li>
        <%= menu_item("Les Editeurs", editors_path, :editors)%>
      </ul>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <%= ariane.render %>
    </div>
    <% if @page_title.present? %>
      <div class="page-header">
        <h2><%= @page_title %></h2>
      </div>
    <% end %>
    <div class="actions">
      <%= yield :navbar %>
    </div>
    <%= yield %>
  </div>

  <hr>

  <footer>
    <div class="container">
      <p>&copy; Company 2012</p>
    </div>
  </footer>

</body>
</html>
