<!DOCTYPE html>
<html>
<head>
  <title><%= @title.present? ?  @title : "Ludomaganager" %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "font-awesome", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>  
  <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <%= link_to "Ludomanager", root_path, :class => "brand" %>
            <div class="nav-collapse">
              <ul class="nav">
                <li class="active"><%= link_to "Games", games_path %></li>
                <li><%= link_to 'Editors', editors_path %></li>
                <li><a href="#contact">Contact</a></li>
              </ul>
              <p class="navbar-text pull-right">
          
              </p>
            </div><!--/.nav-collapse -->
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
            <ul class="breadcrumb">
              <li>
                <%= link_to 'Ludomanager', root_path %><span class="divider">/</span>
              </li>
              <%= yield :breadcrump %>
            </ul>
            <ul>
              <%= yield :navbar %>
            </ul>
            <%= yield %>
          </div>
        </div><!--/row-->

        <hr>

        <footer>
          <p>&copy; Company 2012</p>
        </footer>

      </div><!--/.fluid-container-->
  </div>
</body>
</html>
