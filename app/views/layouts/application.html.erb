<!DOCTYPE html>
<html>
<head>
  <title><%= @title.present? ?  @title : "Ludomaganager" %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "font-awesome", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <%= link_to "Ludomanager", root_path, :class => "brand" %>
            <div class="nav-collapse">
              <ul class="nav">
                <%= menu_item("Les Jeux", games_path, :games) %>
                <%= menu_item("Les Editeurs", editors_path, :editors) %>
              </ul>
              <p class="navbar-text pull-right">

              </p>
            </div><!--/.nav-collapse -->
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
            <%= ariane.render %>
            <ul class="unstyled">
              <%= yield :navbar %>
            </ul>
            <%= yield %>
          </div>
        </div><!--/row-->

        <hr>

        <footer>
          <p>&copy; Company 2012</p>
        </footer>

      </div><!--/.fluid-container-->
  </div>
</body>
</html>
