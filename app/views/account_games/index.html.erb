<div class="page-header">
  <h2>Listing my Games</h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="span1"></th>
      <th>Name</th>
      <th>Type</th>
      <th>Level</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
    <%= render @account_games %>
  </tbody>
</table>

<% content_for :navbar do %>
<li class="nav-header">Manage</li>
  <li><%= link_to " Add games...", new_account_account_game_path(current_account) %></li>
  <li><%= link_to "Stats...", "#" %></li>

  <li class="nav-header">By Type</li>
  <% Game.target.values.each do |optn| %>
    <li><%= link_to optn.text.humanize , account_account_games_path(current_account, target: optn) %></li>
  <% end -%>
   <li class="nav-header">By Time</li>
  <% Game.time.values.each do |optn| %>
    <li><%= link_to optn.text.humanize , account_account_games_path(current_account, time: optn) %></li>
  <% end -%>

<% end -%>