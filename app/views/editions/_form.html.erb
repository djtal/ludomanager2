<fieldset class="well">
  <legend>Edition du jeu</legend>
  <div class="form-inputs">
    <%= form.input :name %>
    <%= form.association :editor %>
    <%= form.input :out_date, :discard_day => true  %>
    <%= form.association :country %>
    <%= form.input :kind, :collection => Edition.kind.options %>
    <%= form.input :plateform, :collection => Edition.plateform.options %>
    <%= form.fields_for :box_front do |box|%>
      <%= box.input :image, :as => :file %>
      Ou
      <%= box.input :remote_image_url %>
    <% end -%>
  </div>
</fieldset>
